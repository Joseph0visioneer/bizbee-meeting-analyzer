[workflows]
runButton = "Run Meeting Analyzer"

[[workflows.workflow]]
name = "Run Meeting Analyzer"
author = 46177818
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "which npm || (echo \"Installing Node.js first...\" && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && apt-get install -y nodejs)"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd meeting-analyzer && npm install && npm run dev -- --port 5000 --hostname 0.0.0.0"

[[workflows.workflow]]
name = "Install Node.js"
author = 46177818
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -fsSL https://deb.nodesource.com/setup_18.x | bash -"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "apt-get install -y nodejs"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm --version"
